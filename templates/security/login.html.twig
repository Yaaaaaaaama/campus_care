{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h2>Connexion</h2>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            <h1 class="h4 mb-3">Veuillez vous connecter</h1>

                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">
                                    <i class="bi bi-envelope-fill"></i> Email
                                </label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">
                                    <i class="bi bi-lock-fill"></i> Mot de passe
                                </label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="text-center">
                                <button class="btn btn-lg btn-primary w-100" type="submit">Se connecter</button>
                            </div>
                        </form>

                        <div class="text-center mt-3">
                            <p>Vous n'avez pas de compte ? 
                                <a href="{{ path('app_register') }}" class="text-primary">S'inscrire</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
{% endblock %}
