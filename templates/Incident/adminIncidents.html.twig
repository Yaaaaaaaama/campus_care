{% extends 'base.html.twig' %}

{% block title %}Gestion des Incidents{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-primary mb-4 text-center">Gestion des Incidents</h1>

        {# Affichage des messages de succès #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">{{ message }}</div>
        {% endfor %}

        {# Formulaire de filtre #}
        <form method="get" action="{{ path('admin_incidents') }}" class="mb-4">
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.location) }}
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Filtrer</button>
                </div>
            </div>
        </form>

        {# Tableau des incidents #}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Catégorie</th>
                        <th>Description</th>
                        <th>Date de Signalement</th>
                        <th>Statut</th>
                        <th>Photo</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for incident in incidents %}
                        <tr>
                            <td>{{ incident.id }}</td>
                            <td>{{ incident.category }}</td>
                            <td>{{ incident.description }}</td>
                            <td>{{ incident.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <span class="badge {{ incident.status == 'Résolu' ? 'bg-success' : (incident.status == 'En cours' ? 'bg-warning' : 'bg-danger') }}">
                                    {{ incident.status }}
                                </span>
                            </td>
                            <td>
                                {% if incident.photo %}
                                    <img src="{{ asset('uploads/photos/' ~ incident.photo) }}" alt="Photo de l'incident" style="max-width: 100px; max-height: 100px;">
                                {% else %}
                                    <span>Aucune photo</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('admin_incident_edit', { 'id': incident.id }) }}" class="btn btn-primary btn-sm">Modifier le Statut</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucun incident signalé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# Ajout d'un bouton pour signaler un nouvel incident #}
        <div class="text-center mt-4">
            <a href="{{ path('incident_new') }}" class="btn btn-success">Signaler un Nouvel Incident</a>
        </div>
    </div>
{% endblock %}
