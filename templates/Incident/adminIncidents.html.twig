{% extends 'base.html.twig' %}

{% block title %}Gestion des Incidents{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-primary mb-4 text-center">Gestion des Incidents</h1>

        {# Affichage du formulaire de filtre #}
        {{ form_start(form) }}
        <div class="row align-items-end">
            <div class="col-md-4">
                <div class="form-group">
                    {{ form_label(form.location) }}
                    {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filtrer</button>
            </div>
        </div>
        {{ form_end(form) }}

        {# Tableau des incidents #}
        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Catégorie</th>
                        <th>Description</th>
                        <th>Localisation</th> {# Nouvelle colonne "Localisation" #}
                        <th>Date de Signalement</th>
                        <th>Statut</th>
                        <th>Photo</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for incident in incidents %}
                        <tr>
                            <td>{{ incident.id }}</td>
                            <td>{{ incident.category }}</td>
                            <td>{{ incident.description }}</td>
                            <td>{{ incident.location }}</td> {# Ajout de la localisation #}
                            <td>{{ incident.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <span class="badge 
                                    {% if incident.status == 'En attente' %}
                                        bg-danger
                                    {% elseif incident.status == 'En cours' %}
                                        bg-warning
                                    {% elseif incident.status == 'Traité' %}
                                        bg-success
                                    {% endif %}
                                ">
                                    {{ incident.status }}
                                </span>
                            </td>
                            <td>
                                {% if incident.photo %}
                                    <img src="{{ asset('uploads/photos/' ~ incident.photo) }}" alt="Photo de l'incident" style="max-width: 100px; max-height: 100px;">
                                {% else %}
                                    <span>Aucune photo</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('admin_incident_edit', { 'id': incident.id }) }}" class="btn btn-primary btn-sm">Modifier le Statut</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">Aucun incident trouvé pour ce filtre.</td> {# Ajustement du colspan à 8 à cause de la nouvelle colonne #}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
